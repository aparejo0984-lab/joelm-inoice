{% extends '@SolidInvoiceInstall/layout.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="card card-primary">
                <div class="card-header with-border">
                    <h3 class="card-title" id="install-title">
                        {{ 'installation.process.title.busy'|trans }}
                    </h3>
                </div>
                <div class="card-body">
                    <div class="progress progress-striped mb-3">
                        <div class="progress-bar active" role="progressbar" aria-valuenow="45" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
                        </div>
                    </div>

                    <div id="error-message" class="text-danger"></div>

                    <ul class="list-group">
                        <li class="list-group-item" id="step-createdb">
                            {{ 'installation.process.step.createdb'|trans }}
                        </li>
                        <li class="list-group-item" id="step-migrations">
                            {{ 'installation.process.step.migrations'|trans }}
                        </li>
                    </ul>
                </div>
                <div class="card-footer">
                    <div class="row">
                        <div class="col align-self-start">
                            <a href="{{ path('_install_config') }}" class="btn btn-warning btn-block">
                                {{ icon('arrow-left') }} {{ "installation.action.previous"|trans }}
                            </a>
                        </div>
                        <div class="col-8">
                        </div>
                        <div class="col" id="next_button">
                            <a id="continue_step" href="{{ path('_install_setup') }}" class="disabled btn btn-success btn-block">
                                {{ "installation.action.next"|trans }} {{ icon('arrow-right') }}
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block scripts %}
    {{ encore_entry_script_tags('installation-install') }}
{% endblock scripts %}
